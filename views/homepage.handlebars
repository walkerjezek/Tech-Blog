<!-- Loop over each object in the posts array -->
{{#each posts as |posts| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount post.needed_funding}}</span>
      needed!
    </p>
    <p>Created by {{posts.user.name}} on {{format_date posts.date_created}}</p>
  </div>
  <div class="col-md-7">
